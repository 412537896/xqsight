<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="fileUploadPropertyConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>file:///config/appconfig/xqsight/xqsight.file.upload.cfg.properties</value>
            </list>
        </property>
    </bean>

    <bean class="com.xqsight.upload.config.FileUploadConfig">
        <property name="SAVE_TYPE" value="${xqsight.file.upload.save.type}"/>
        <property name="FTP_URL" value="${xqsight.file.upload.ftp.url}"/>
        <property name="FTP_PORT" value="${xqsight.file.upload.ftp.port}"/>
        <property name="FTP_USERNAME" value="${xqsight.file.upload.ftp.username}"/>
        <property name="FTP_PASSWORD" value="${xqsight.file.upload.ftp.password}"/>
        <property name="FTP_UPLOADURL" value="${xqsight.file.upload.ftp.uploadurl}"/>
        <property name="LOCAL_UPLOADURL" value="${xqsight.file.upload.local.uploadurl}"/>
    </bean>

</beans>